                      <div class="work__itemPic">
                        <p class="work__itemlogo">
                          <Image
                            src={hanamoriLogo}
                            alt=""
                            class="work__logoimg"
                          />
                        </p>
                        <Image
                          src={hanamoriItem}
                          alt=""
                          class="work__itemImg"
                        />
                      </div>
                    </div>
                    <h4 class="work__itemSub">観葉植物ECサイト</h4>
                    <div class="work__tagWrap">
                      <p class="work__tag">#coding</p>
                    </div>
                  </a>
                </div>
                <div
                  class="work__item stkr-target"
                  id="work03"
                  data-target="#bg03"
                >
                  <a href="works/endo-dc.html" class="work__link">
                    <h3 class="work__itemTitle">ENDO Dental Clinic</h3>
                    <div class="work__picWrap">
                      <div class="work__itemPic">
                        <p class="work__itemlogo">
