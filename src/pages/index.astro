import intImg02 from "@images/top/int_img02b.webp";
import intImg03 from "@images/top/int_img03b.webp";
import intImg04 from "@images/top/int_img04b.webp";
import intImg05 from "@images/top/int_img05b.webp";
---

<Layout title="Maya Uematsu portfolio">
  <div class="loading">
    <div class="loading__animation">
      <div class="loading__sircle"></div>
      <p class="loading__txt"></p>
    </div>
  </div>

  <div id="index">
    <div class="wrapper" id="wrapper">
      <Header />
      <div id="mouse"></div>
      <div class="secScroll" id="secScroll">
        <div class="secScroll__top">01</div>
        <div class="secScroll__middle">
          <div class="secScroll__middle-line"></div>
        </div>
        <div class="secScroll__bottom">05</div>
      </div>
      <main class="main" id="main">
        <div class="mv" id="mv">
          <Image src={mvHuge} alt="ME" class="mv__img" />
          <div class="mv__scroll">
            <div class="mv__scroll-line"></div>
          </div>
        </div>

        <div class="about" id="about">
          <div class="stroke">
            <div class="stroke__bg">
              <div class="stroke__front stroke__about">
                <Image
                  src={aboutHugeP}
                  alt="ABOUT ME"
                  class="stroke__Fimg about__img"
                />
              </div>
              <p class="stroke__pic">
                <Image
                  src={profileImg}
                  alt="女性（上松）がムーミンの石像と並んで写っている写真"
                  class="stroke__img"
                />
              </p>
            </div>
            <div class="stroke__back stroke__about">
              <div class="stroke__inner">
                <Image
                  src={aboutHugeB}
                  alt="ABOUT ME"
                  class="stroke__Bimg about__img"
                />
              </div>
            </div>
          </div>
          <div class="about__box">
            <p class="about__nameSub">Maya Uematsu</p>
            <div class="about__nameWrap">
              <p class="about__name">上松　眞綾</p>
              <div class="about__iconWrap">
                <a
                  href="https://github.com/ymkmy98"
                  target="_blank"
                  class="about__iconLink stkr-target"
                >
                  <Image
                    src={githubIcon}
                    alt="githubのアイコン"
                    class="about__iconImg"
                  />
                </a>
              </div>
            </div>
            <p class="about__txt">
              大学で学んだ経営学や前職の写真レタッチ業務を通して、
              表に立つ人たちを支えられるクリエイティブな仕事をライフワークとしたいと思うようになりました。<br
              />webの利点のひとつであるタッチポイントの幅の広さを活かすべく、ウェブアクセシビリティやUI/UXを意識しながらキャリアを重ねたいと考えています。<br
              />誰かの想いやアイデアを形に起こしたり演出したりすることが好きで、縁の下の力持ちを自負しています。
            </p>
          </div>
        </div>

        <section class="work" id="work">
          <div class="work__wrap">
            <h2 class="work__huge">
              <Image src={workHuge} alt="WORK" class="work__img" />
            </h2>

            <div class="work__bgWrap">
              <div class="work__bg bg01" id="bg01"></div>
              <div class="work__bg bg02" id="bg02"></div>
              <div class="work__bg bg03" id="bg03"></div>
              <div class="work__bg bg04" id="bg04"></div>
              <div class="work__bg bg05" id="bg05"></div>
              <div class="work__bg bg06" id="bg06"></div>
              <div class="work__bg bg07" id="bg07"></div>
              <div class="work__bg bg08" id="bg08"></div>
              <div class="work__bg bg09" id="bg09"></div>
              <div class="work__bg bg10" id="bg10"></div>
              <div class="work__bg bg11" id="bg11"></div>
              <div class="work__bg bg12" id="bg12"></div>
            </div>

            <div class="work__sideScroll">
              <div class="work__list">
